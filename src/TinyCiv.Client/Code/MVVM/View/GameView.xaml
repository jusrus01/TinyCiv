<UserControl x:Class="TinyCiv.Client.Code.MVVM.View.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TinyCiv.Client.Code.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700">
    <Grid>
        <UniformGrid x:Name="MapGrid" 
                         Rows="20" 
                         Columns="20"
                         Height="600"
                         Width="600"
                         SnapsToDevicePixels="True"
                         RenderOptions.BitmapScalingMode="HighQuality">
            <ItemsControl ItemsSource="{Binding gameGrid.MapList.Value}"/>
        </UniformGrid>

        <UniformGrid x:Name="UnitGrid" 
                         Rows="20" 
                         Columns="20"
                         Height="600"
                         Width="600"
                         SnapsToDevicePixels="True"
                         RenderOptions.BitmapScalingMode="HighQuality">
            <ItemsControl ItemsSource="{Binding gameGrid.SpriteList.Value}"/>
        </UniformGrid>

        <TextBlock>AAAAAAA</TextBlock>
    </Grid>
</UserControl>
