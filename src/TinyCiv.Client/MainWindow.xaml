<Window x:Class="TinyCiv.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyCiv.Client"
        xmlns:viewModel="clr-namespace:TinyCiv.Client.Code.MVVM"
        mc:Ignorable="d"
        
        Title="MainWindow" SizeToContent="Height" Width="900">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Grid Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width ="200"/>
        </Grid.ColumnDefinitions>

        <ContentControl
            Content="{Binding Game.Value}"/>


        <Border Grid.Column="1"
                Margin="2"
                Background="#f1f1f1"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <ContentControl
                    Margin="5"
                    Grid.Row="0"
                    Content="{Binding UpperMenu.Value}"/>

                <ContentControl
                    Margin="5"
                    Grid.Row="1"
                    Content="{Binding LowerMenu.Value}"/>
            </Grid>
        </Border>

        
    </Grid>
</Window>
