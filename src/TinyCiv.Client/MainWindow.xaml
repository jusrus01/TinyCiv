<Window x:Class="TinyCiv.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyCiv.Client"
        mc:Ignorable="d"
        
        Title="MainWindow" SizeToContent="Height" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width ="200"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <UniformGrid x:Name="MapGrid" 
                         Rows="20" 
                         Columns="20"
                         Height="600"
                         Width="600"
                         SnapsToDevicePixels="True"
                         RenderOptions.BitmapScalingMode="HighQuality">
                
            </UniformGrid>

            <UniformGrid x:Name="UnitGrid" 
                         Rows="20" 
                         Columns="20"
                         Height="600"
                         Width="600"
                         SnapsToDevicePixels="True"
                         RenderOptions.BitmapScalingMode="HighQuality">
            </UniformGrid>
        </Grid>
               
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black">
                <StackPanel>
                    <TextBlock>Gold:</TextBlock>
                    <TextBlock>Units</TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Your color:</TextBlock>
                        <TextBlock Text="{Binding PlayerColor.Value}"></TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="1">
                <StackPanel Visibility="{Binding IsUnitStatVisible.Value}" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Unit: </TextBlock>
                        <TextBlock Text="{Binding UnitName.Value}"></TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
    </Grid>
</Window>
