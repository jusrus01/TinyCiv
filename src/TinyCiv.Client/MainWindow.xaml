<Window x:Class="TinyCiv.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyCiv.Client"
        xmlns:viewModel="clr-namespace:TinyCiv.Client.Code.MVVM"
        mc:Ignorable="d"
        
        Title="Tiny Empires" SizeToContent="WidthAndHeight">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width ="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ContentControl
            Content="{Binding Game.Value}"/>


        <Grid x:Name="sidePanelGrid" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <ContentControl
                Grid.Row="0"
                Content="{Binding UpperMenu.Value}"/>

            <ContentControl
                Grid.Row="1"
                Content="{Binding ChatBoxMenu.Value}"/>

            <ContentControl
                Grid.Row="2"
                Content="{Binding LowerMenu.Value}"/>

            <ContentControl
                Grid.Row="3"
                Content="{Binding ExecutionMenu.Value}"/>
        </Grid>

        <ContentControl
                Grid.Row="1"
                Content="{Binding BottomLine.Value}"/>
    </Grid>
</Window>
